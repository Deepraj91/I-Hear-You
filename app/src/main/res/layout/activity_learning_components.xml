<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Gujarati Alphabets Section -->
        <TextView
            android:id="@+id/gujarati_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gujarati_alphabets"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <VideoView
            android:id="@+id/gujarati_video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />

        <!-- Numbers Section -->
        <TextView
            android:id="@+id/numbers_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numbers"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <VideoView
            android:id="@+id/numbers_video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0" />

        <!-- English Alphabets Section -->
        <TextView
            android:id="@+id/english_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/english_alphabets"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <VideoView
            android:id="@+id/english_video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0" />

        <!-- Additional Section -->
        <TextView
            android:id="@+id/more_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/math_sign"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <VideoView
            android:id="@+id/more_video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0" />

    </LinearLayout>
</ScrollView>
