<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <!-- Toolbar with back button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#F2E380"
        android:titleTextColor="@android:color/white"
        app:title="Quiz Time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Quiz Section -->
    <LinearLayout
        android:id="@+id/quiz_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="#F9F9F9"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/quiz_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz: Test Your Knowledge"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="12dp" />

        <!-- Question 1 -->
        <TextView
            android:id="@+id/question_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. What is 2 + 2?"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Horizontal layout for images -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <!-- Second Image -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="129dp"
                android:layout_height="107dp"
                app:srcCompat="@drawable/math1"
                android:layout_marginEnd="16dp"/>

            <!-- Third Image -->
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="129dp"
                android:layout_height="107dp"
                app:srcCompat="@drawable/plus" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="129dp"
                android:layout_height="107dp"
                app:srcCompat="@drawable/math1" />
        </LinearLayout>

        <!-- Radio buttons for options -->
        <RadioGroup
            android:id="@+id/question_2_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option_2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <RadioButton
                android:id="@+id/option_2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <RadioButton
                android:id="@+id/option_2c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />
        </RadioGroup>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Submit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
