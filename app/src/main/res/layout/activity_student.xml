<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <!-- Section 1: Notification Bell and Notepad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="start"
            android:orientation="horizontal">

            <!-- Notification Bell -->
            <ImageView
                android:id="@+id/notificationBell"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Notifications"
                android:src="@drawable/notification" />

            <!-- Notepad -->
            <ImageView
                android:id="@+id/notepad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Notepad"
                android:src="@drawable/notepad" />

            <!-- Menu -->
            <ImageView
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="190dp"
                android:contentDescription="menu"
                android:src="@drawable/menu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:orientation="horizontal">


            </LinearLayout>


        </LinearLayout>

        <!-- Section 2: Resources -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Resources"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Grid Layout -->

        <!-- Section 3: Convert Word to Sign -->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="351dp"
            android:columnCount="2"
            tools:ignore="ExtraText">

            <!-- Learning Components -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="166dp"
                    android:layout_height="120dp"
                    android:background="@drawable/image_rounded_corners"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />

                <TextView
                    android:id="@+id/learningComponents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Learning Components"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Gujarati News -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="166dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_1" />

                <TextView
                    android:id="@+id/gujaratiNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Gujarati News"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Exercises -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="166dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_2" />

                <TextView
                    android:id="@+id/exercises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Exercises"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Performance -->=
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="166dp"
                    android:layout_height="120dp"
                    android:background="@drawable/image_rounded_corners"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_3" />

                <TextView
                    android:id="@+id/performance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Performance"
                    android:textSize="14sp" />
            </LinearLayout>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Convert Word to Sign"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/noteEditText"
            android:layout_width="327dp"
            android:layout_height="68dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_background"
            android:gravity="top"
            android:hint="  Write your text here..."
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/wordToSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translate"
            android:backgroundTint="#E9B84B"
            android:textColor="@android:color/white" />

        <!-- Section 4: Convert Sign to Word -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Convert Sign to Word"
            android:textSize="30sp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/signToWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translate"
            android:backgroundTint="#E9B84B"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
