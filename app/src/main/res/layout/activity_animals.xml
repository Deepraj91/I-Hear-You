<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A7DBC9">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="6dp"
        android:contentDescription="Back"
        android:src="@drawable/backbutton" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Numbers"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Progress Label -->
    <TextView
        android:id="@+id/progress_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Your progress: 0/2"
        android:textSize="16sp"
        android:textColor="#FFFFFF" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:indeterminate="false"
        android:progress="0"
        android:max="12"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_bar" />

    <!-- Grid Layout -->
    <GridLayout
        android:id="@+id/animals_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:columnCount="2"
        android:rowCount="6"
        android:layout_marginBottom="16dp">

        <!-- Animal Card 1 (Butterfly) -->
        <LinearLayout
            android:id="@+id/animal_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corner_2"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="118dp"
                android:layout_height="88dp"
                android:contentDescription="Butterfly"
                android:src="@drawable/one" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Animal Card 2 (Cat) -->
        <LinearLayout
            android:id="@+id/animal_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corner_2"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Cat"
                android:src="@drawable/two" />

            <TextView
                android:layout_width="31dp"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>
</RelativeLayout>
